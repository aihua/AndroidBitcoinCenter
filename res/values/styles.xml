<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>

    <style name="bitcoinIcon">
        <item name="android:layout_width">?android:attr/listPreferredItemHeight</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_weight">1</item>
        <item name="android:height">@dimen/ButtonHeight</item>
        <item name="android:width">@dimen/ButtonWidth</item>
        <item name="android:maxHeight">@dimen/MinButtonHeight</item>
        <item name="android:maxWidth">@dimen/MaxButtonWidth</item>
        <item name="android:minHeight">@dimen/MinButtonHeight</item>
        <item name="android:minWidth">@dimen/MinButtonWidth</item>
        <item name="android:padding">@dimen/Padding</item>
    </style>

    <style name="Button.Landscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Button.Landscape.xhdpi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button.Vertical.xhdpi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>